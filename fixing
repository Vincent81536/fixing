
-- Minimal Jason Animator Script with only Idle and Walk (R6-only)
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Player = Players.LocalPlayer

repeat task.wait() until Player.Character
local Character = Player.Character
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")

-- Load AnimatorModule
local AnimatorModule = loadstring(game:HttpGet("https://gist.githubusercontent.com/MelonsStuff/51f4829e57f3c5d5357f0be11d39d081/raw/dd06c57e154231594a3bf33388e1085d8554c1d7/JasonAnimator.lua"))()

-- Create Animations folder and add Idle + Walk animations
local Animations = Instance.new("Folder")
Animations.Name = "Animations"
Animations.Parent = script

local IdleAnim = Instance.new("Animation")
IdleAnim.Name = "Idle"
IdleAnim.AnimationId = "rbxassetid://132196401232277"
IdleAnim.Parent = Animations

local WalkAnim = Instance.new("Animation")
WalkAnim.Name = "Walk"
WalkAnim.AnimationId = "rbxassetid://96901225702491"
WalkAnim.Parent = Animations

-- Setup walk speed
Humanoid.WalkSpeed = 7

-- Idle/Walk switching loop
task.spawn(function()
    while Character and Character.Parent do
        task.wait(0.15)
        local flatVelocity = Vector3.new(RootPart.Velocity.X, 0, RootPart.Velocity.Z)
        if flatVelocity.Magnitude < 1 then
            AnimatorModule:PlayAnim("Idle")
        else
            AnimatorModule:PlayAnim("Walk")
        end
    end
end)
